// PRODUCT PHOTOS SLIDER
if (document.getElementById('productPhotoSlider')) {
    let init = false;

    const swiperCard = () => {
        if (window.innerWidth < 960) {
            if (!init) {
                init = true;
                const phoductPhotoSlider = new Swiper("#productPhotoSlider", {
                    slidesPerView: 1,
                    slidesPerGroup: 1,
                    spaceBetween: 5,
                    breakpoints: {
                        640: {
                            slidesPerView: 2,
                            spaceBetween: 8,
                        },
                        960: {
                            slidesPerView: 3,
                        },
                        1200: {
                            slidesPerView: 4,
                            loop: false,
                        }
                    }
                });
            }
        } else if (init) {
            phoductPhotoSlider.destroy();
            init = false;
        }
    }

    swiperCard();
    window.addEventListener("resize", swiperCard);
}
